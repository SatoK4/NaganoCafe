<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
<table>
  <tr>
    <div class="field">
      <td>商品画像</td>
      <td><%= f.file_field :image %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td>商品名</td>
      <td><%= f.text_area :name %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td>税抜価格</td>
      <td><%= f.text_area :price %>円</td>
    </div>
  </tr>
</table>
<%= f.submit "変更を保存" %>
<% end %>