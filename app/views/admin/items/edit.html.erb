<div class="container">
  <div class="row">
    <h3 class="bg-light">商品編集</h3>
  </div>
  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
  <div class="row">
    <table class="table table-borderless table-sm">
      <tr>
        <div class="field">
          <td class="font-weight-bold">商品画像</td>
          <td><%= f.file_field :image %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td class="font-weight-bold">商品名</td>
          <td><%= f.text_area :name %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td class="font-weight-bold">商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td class="font-weight-bold">税抜価格</td>
          <td><%= f.text_area :price %>円</td>
        </div>
      </tr>
    </table>
  </div>
  <div class="row">
    <%= f.submit "変更を保存",class:"btn btn-success" %>
    <% end %>
  </div>
</div>