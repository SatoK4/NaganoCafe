<div class="container">
  <div class="row">
    <h3 class="bg-light">商品新規登録</h3>
  </div>
  <div class="row">
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました。
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: @item, url: admin_items_path do |f| %>
  <div class="row">
    <table class="table table-borderless table-sm">
      <tr>
        <td class="font-weight-bold"><%= f.label :商品画像 %></td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td class="font-weight-bold"><%= f.label :商品名 %></td>
        <td><%= f.text_area :name %></td>
      </tr>
      <tr>
        <td class="font-weight-bold"><%= f.label :商品説明 %></td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td class="font-weight-bold"><%= f.label :税抜価格 %></td>
        <td><%= f.text_area :price %>円</td>
      </tr>
    </table>
  </div>
  <%= f.submit "新規登録",class:"btn btn-success" %>
  <% end %>
</div>