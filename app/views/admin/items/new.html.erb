<h2>商品新規登録</h2>
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました。
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @item, url: admin_items_path do |f| %>
<table>
  <tr>
    <div class="field">
      <td><%= f.label :商品画像 %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :商品名 %></td>
      <td><%= f.text_area :name %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :商品説明 %></td>
      <td><%= f.text_area :introduction %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :税抜価格 %></td>
      <td><%= f.text_area :price %>円</td>
    </div>
  </tr>
</table>
<%= f.submit "新規登録" %>
<% end %>