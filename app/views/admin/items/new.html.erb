<h2>商品新規登録</h2>
<%= form_with model: @item, url: admin_items_path do |f| %>
<table>
  <tr>
    <td>
      <%= f.label :商品画像 %>
    </td>
    <td>
      <%= f.file_field :image, accept: "image/*" %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :商品名 %>
    </td>
    <td>
      <%= f.text_area :name %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :商品説明 %>
    </td>
    <td>
      <%= f.text_area :introduction %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :税込み価格 %>
    </td>
    <td>
      <%= f.text_area :price %>円
    </td>
  </tr>
</table>
<% end %>