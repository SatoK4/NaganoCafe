<h2>注文履歴詳細</h2>
<table>
  <tr>
    <td>購入者</td>
    <td><%= @order.customer.full_name %></td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order.create_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.postal_code %> + ' ' + <%= @order.address %><br />
      <%= @order.customer.full_name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_method %></td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.each do |order| %>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.with_tax_price %></td>
      <td><%= order.amount %></td>
      <td>
        <%= order.sub_total %>
        <% @total_price += order.sub_total %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>

<table>
  <tr>
    <td>商品合計</td>
    <td><%= @total_price %>円</td>
  </tr>
  <tr>
    <td>送料</td>
    <td>800円</td>
  </tr>
  <tr>
    <td>請求額合計</td>
    <td><%= @total_price.to_i + 800 %>円</td>
  </tr>
</table>