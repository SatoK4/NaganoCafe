<div class="container">
  <div class="row">
    <h3 class="bg-light"><%= @customer.full_name %>さんの会員詳細</h3>
  </div>
  <div class="row offset-1">
    <table class="table table-sm">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.full_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.full_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td><%= @customer.withdraw_status %></td>
      </tr>
    </table>
  </div>
  <div class="row offset-2">
    <%= link_to edit_admin_customer_path,class:"btn btn-success btn-sm" do %>
      編集する
    <% end %>
    <%= link_to admin_root_path,class:"btn btn-primary btn-sm ml-5" do %>
      注文履歴一覧を見る
    <% end %>
  </div>
</div>