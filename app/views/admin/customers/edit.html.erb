<div class="container">
  <div class="row">
    <h3 class="bg-light"><%= @customer.full_name %>さんの会員情報編集</h3>
  </div>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <div class="row">
    <table class="table table-borderless table-sm">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_area :last_name,class:"form-control" %></td>
        <td><%= f.text_area :first_name,class:"form-control" %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_area :last_name_kana,class:"form-control" %></td>
        <td><%= f.text_area :first_name_kana,class:"form-control" %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_area :postal_code,class:"form-control" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td colspan="2"><%= f.text_area :address,class:"form-control" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_area :telephone_number,class:"form-control" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td class="input-sm"><%= f.text_area :email,class:"form-control " %></td>
      </tr>
      <tr>
        <td>
          会員ステータス
        </td>
        <td>
          <%= f.radio_button :is_deleted, "false" %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted, "退会" %>
        </td>
      </tr>
    </table>
  </div>
  <div class="row">
  <%= f.submit "変更を保存",class:"btn btn-success" %>
  <% end %>
  </div>
</div>