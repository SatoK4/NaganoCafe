<h2><%= @customer.full_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
<table>
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= f.text_area :last_name %></td>
    <td><%= f.text_area :first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= f.text_area :last_name_kana %></td>
    <td><%= f.text_area :first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_area :postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_area :address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= f.text_area :telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.text_area :email %></td>
  </tr>
  <!--会員ステータス-->
</table>
<%= f.submit "変更を保存" %>
<% end %>