<div class="container">
  <div class="row">
    <h3 class="bg-light">管理者ログイン</h3>
  </div>

  <%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="row offset-1 form-group">
    <%= f.label :"メールアドレス",class:"col-4" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control col-8" %>
  </div>

  <div class="row offset-1 form-group">
    <%= f.label :"パスワード",class:"col-4" %>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control col-8" %>
  </div>

  <div class="row mt-3">
    <%= f.submit "ログイン",class:"btn btn-primary offset-6" %>
  </div>
  <% end %>
  </div>
</div>