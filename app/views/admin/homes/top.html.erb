<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      <td><%= order.customer.full_name %></td>
      <td>
        <% order.order_details.each do |order_detail| %>
          <% order_detail.amount %>
          <% @total_amount += order_detail.amount %>
        <% end %>
        <%= @total_amount %>
        <% @total_amount = 0 %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>