<div class="container">
  <div class="row mt-5">
    <div class="col-4 d-flex justify-content-center">
      <%= image_tag @item.image,size:"200x200" %>
    </div>
    <div class="col-8 mt-3">
      <p class="h3 font-weight-bold"><%= @item.name %></p>
      <p class="h5"><%= @item.introduction %></p>
      <div class="row">
        <p class="h4">￥<%= @item.with_tax_price %></p>
        <p class="h6 d-flex align-items-end">(税込)</p>
      </div>
      <%= form_with(model: @cart_item, url: cart_items_path, method: :post)do |f| %>
        <%= f.label :amount, "数量を選択して下さい。" %>
        <%= f.select :amount, *[1..10] %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる",class:"btn btn-success btn-sm" %>
      <% end %>
    </div>
  </div>
</div>