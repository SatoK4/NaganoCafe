<h2>ショッピングカート</h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.image %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.total_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.sub_total %></td>
      <td>
        <%= link_to cart_item_path(cart_item.id), method: :delete do %>
          削除する
        <% end %>
      </td>
    <% end %>
    </tr>
  </tbody>
</table>