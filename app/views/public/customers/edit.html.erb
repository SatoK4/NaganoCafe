<div class="container">
  <div class="row">
    <h3 class="bg-light">会員情報編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: update_customer_path, method: :patch do |f| %>
    <table class="table table-borderless table-sm offset-1">
      <tr>
        <td><%= f.label :氏名 %></td>
        <td><%= f.text_field :last_name, class: "form-control" %></td>
        <td><%= f.text_field :first_name, class: "form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
        <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postal_code, class: "form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :住所 %>
        <td><%= f.text_field :address, class: "form-control" %>
      </tr>
      <tr>
        <td><%= f.label :電話番号 %></td>
        <td><%= f.text_field :telephone_number, class: "form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.text_field :email, class: "form-control" %></td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= f.submit "編集内容を保存", class:"btn btn-success btn-sm" %>
        </td>
        <td>
          <%= link_to unsubscribe_customer_path, class:"btn btn-danger btn-sm" do %>
            退会する
          <% end %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>
