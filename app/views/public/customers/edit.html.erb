<h2>会員情報編集</h2>

<%= form_with model: @customer, url: update_customer_path, method: :patch do |f| %>
<table>
  <tr>
    <div class="field">
      <td><%= f.label :氏名 %></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.text_field :first_name %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :フリガナ %></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :郵便番号 %></td>
      <td><%= f.text_field :postal_code %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :住所 %>
      <td><%= f.text_field :address %>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :電話番号 %></td>
      <td><%= f.text_field :telephone_number %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <td><%= f.label :メールアドレス %></td>
      <td><%= f.text_field :email %></td>
    </div>
  </tr>
</table>
<%= f.submit "編集内容を保存" %>
<% end %>
<%= link_to unsubscribe_customer_path do %>
  退会する
<% end %>

