<div class="container">
  <div class="row">
    <h3 class="bg-light">新規会員登録</h3>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless table-sm">
        <tr>
          <div class="field">
            <td>名前</td>
            <td><%= f.label :"(姓)" %></td>
            <td><%= f.text_field :last_name, class: "form-control" %></td>
            <td><%= f.label :"(名)" %></td>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>フリガナ</td>
            <td><%= f.label :"(セイ)" %></td>
            <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            <td><%= f.label :"(メイ)" %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :"メールアドレス" %></td>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :postal_code, class: "form-control" %></td>
          </div>
        </tr>
        <tr class="field">
            <td><%= f.label :"住所" %></td>
            <td></td>
            <td colspan="3"><%= f.text_field :address, class: "form-control" %></td>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :"電話番号(ハイフンなし)" %></td>
            <td></td>
            <td><%= f.text_field :telephone_number, class: "form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :"パスワード(6文字以上)" %></td>
            <td></td>
            <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :"パスワード(確認用)" %></td>
            <td></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
          </div>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td>
            <div class="actions">
              <%= f.submit "新規登録", class:"btn btn-success btn-block" %>
          </div>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class="row">
    <h3 class="bg-light">既に登録済みの方</h3>
  </div>
  <div class="row">
    <div class="col-12">
      <p>
        <%= link_to new_customer_session_path do %>
        こちら
        <% end %>
        からログインしてください。
      </p>
    </div>
  </div>
</div>