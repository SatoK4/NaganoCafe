<h2>新規会員登録</h2>

<%= form_with model: @customer, url: new_customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <td>名前</td>
      <div class="field">
        <td><%= f.label :"(姓)" %></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.label :"(名)" %></td>
        <td><%= f.text_field :first_name %></td>
      </div>
    </tr>
    <tr>
      <td>フリガナ</td>
      <div class="field">
        <td><%= f.label :"(セイ)" %></td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.label :"(メイ)" %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label :"メールアドレス" %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :postal_code %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label :"住所" %></td>
        <td></td>
        <td><%= f.text_field :address %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label :"電話番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :telephone_number %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label :"パスワード(6文字以上)" %></td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label :"パスワード(確認用)" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </div>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p>
  <%= link_to new_customer_session_path do %>
  こちら
  <% end %>
  からログインしてください。
</p>